<?page title="Type de compteur" contentType="text/html;charset=UTF-8"?>
<zk>
	<window height="100%" apply="org.zkoss.bind.BindComposer"
		viewModel="@id('vm') @init('nc.noumea.mairie.bilan.energie.web.typeCompteur.TypeCompteurGestionMVVM')">
		<vlayout height="100%">
			<hlayout width="100%">
				<panel>
					<panelchildren>
						<button label="Ajouter un type de compteur"
							style="margin-right:15px;" image="resources/images/add.png"
							onClick="@command('create')"
							tooltiptext="Création d'un type de compteur" />
						<button label="Rafraîchir" style="margin:2px; "
							image="resources/images/refresh.png" onClick="@command('search')" />
					</panelchildren>
				</panel>
			</hlayout>
			<panel title="Liste des types de compteur" height="100%"
				vflex="1">
				<panelchildren>
					<listbox height="100%" vflex="1" mold="paging"
						pageSize="@load(vm.pagination)"
						selectedItem="@bind(vm.selectedItem)" model="@load(vm.dataSet)">
						<listhead sizable="true">
							<listheader label="Libellé" width="400px"
								sort="auto(libelle)" sortDirection="ascending" />
							<listheader label="Désignation" hflex="1" />
							<listheader label="" width="60px" />
						</listhead>
						<template name="model" var="p1">
							<listitem
								onDoubleClick="@command('edit',typeCompteurRecord=p1)">
								<listcell label="@load(p1.libelle)" />
								<listcell label="@load(p1.description)" />
								<listcell>
									<button
										onClick="@command('delete',typeCompteurRecord=p1)"
										image="resources/images/delete.png" tooltiptext="Suppression" />
								</listcell>
							</listitem>
						</template>
					</listbox>
				</panelchildren>
			</panel>
		</vlayout>
	</window>
</zk>