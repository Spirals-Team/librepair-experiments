<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tangly.mapper.UserAuthMapper">
    <resultMap id="BaseResultMap" type="com.tangly.entity.UserAuth">
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="user_id" jdbcType="INTEGER" property="userId"/>
        <result column="available" jdbcType="TINYINT" property="available"/>
        <result column="login_type" jdbcType="VARCHAR" property="loginType"/>
        <result column="login_account" jdbcType="VARCHAR" property="loginAccount"/>
        <result column="login_password" jdbcType="VARCHAR" property="loginPassword"/>
        <result column="login_salt" jdbcType="VARCHAR" property="loginSalt"/>
    </resultMap>

    <resultMap id="UserAuthMap" extends="BaseResultMap" type="com.tangly.entity.UserAuth">
        <association property="userInfo" resultMap="UserInfoMap"/>
        <collection property="sysRoleList" resultMap="SysRoleMap"/>
    </resultMap>

    <resultMap id="UserInfoMap" type="com.tangly.entity.UserInfo">
        <id column="user_id" jdbcType="BIGINT" property="userId"/>
        <result column="user_nickname" jdbcType="VARCHAR" property="nickname"/>
    </resultMap>

    <resultMap id="SysRoleMap" type="com.tangly.entity.SysRole">
        <id column="role_id" jdbcType="BIGINT" property="id"/>
        <result column="role_available" jdbcType="BIT" property="available"/>
        <result column="role_description" jdbcType="VARCHAR" property="description"/>
        <result column="role_role" jdbcType="VARCHAR" property="role"/>
        <collection property="sysPermissionList" resultMap="SysPermission"/>
    </resultMap>

    <resultMap id="SysPermission" type="com.tangly.entity.SysPermission">
        <id column="permission_id" jdbcType="BIGINT" property="id" />
        <result column="permission_name" jdbcType="VARCHAR" property="name" />
        <result column="permission_available" jdbcType="BIT" property="available" />
        <result column="permission_description" jdbcType="VARCHAR" property="description" />
    </resultMap>

    <select id="getUserAuth" resultMap="UserAuthMap">
      SELECT
      	ua.*, u.user_id,
      	u.nickname user_nickname,
      	r.id role_id,
      	r.role role_role,
      	r.available role_available,
      	r.description role_description,
      	p.id permission_id,
      	p.`name` permission_name,
      	p.available permission_available,
      	p.description permission_description
      FROM
      	user_auth ua
      LEFT JOIN user_info u ON u.user_id = ua.user_id
      LEFT JOIN sys_user_role ur ON ur.user_id = ua.user_id
      LEFT JOIN sys_role r ON ur.role_id = r.id
      LEFT JOIN sys_role_permission rp ON rp.role_id = r.id
      LEFT JOIN sys_permission p ON p.id = rp.permission_id
      WHERE
      ua.login_account = #{loginAccount};
    </select>
</mapper>