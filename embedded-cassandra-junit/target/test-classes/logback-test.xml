<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %m%xEx%n
            </pattern>
        </encoder>
    </appender>
    `

    <logger name="com.github.nosan.embedded.cassandra" level="INFO">
        <appender-ref ref="STDOUT"/>
    </logger>

</configuration>
