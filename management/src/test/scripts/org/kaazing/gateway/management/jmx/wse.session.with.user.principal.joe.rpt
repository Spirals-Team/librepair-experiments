connect "http://localhost:8001/echo/;e/cb?token=joe"
connected

# Connection request
write http:method "POST"
write http:version "HTTP/1.1"
write http:host
write http:content-length
write http:header "X-WebSocket-Version" "wseb-1.0"
write http:header "X-Sequence-No" "0"
write close

read http:status "201" /.+/
read http:version "HTTP/1.1"

read /(?<upstream>http:\/\/localhost:8001\/echo\/.+)\n/
read /(?<downstream>http:\/\/localhost:8001\/echo\/.+)\n/

read notify CREATED
read closed

# Downstream
connect await CREATED ${downstream}
connected

write http:method "GET"
write http:version "HTTP/1.1"
write http:host
write http:header "X-Sequence-No" "1"
write http:content-length
write close

read http:status "200" /.+/
read http:header "Content-Type" /(?!text\/plain;charset=windows-1252)/
read http:header "Connection" "close"
read [0x01 0x30 0x30 0xFF] # NO-OP

