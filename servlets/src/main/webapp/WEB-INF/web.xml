<web-app>

    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>zuryanov.servlets.presentation.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>zuryanov.servlets.presentation.UserServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Users Controller Servlet</servlet-name>
        <servlet-class>zuryanov.servlets.presentation.UsersController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Users Controller Servlet</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserCreate Controller</servlet-name>
        <servlet-class>zuryanov.servlets.presentation.UserCreateController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserCreate Controller</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UserUpdate Controller</servlet-name>
        <servlet-class>zuryanov.servlets.presentation.UserUpdateController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserUpdate Controller</servlet-name>
        <url-pattern>/edit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Signin</servlet-name>
        <servlet-class>zuryanov.servlets.presentation.SigninController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Signin</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Signout</servlet-name>
        <servlet-class>zuryanov.servlets.presentation.SignoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Signout</servlet-name>
        <url-pattern>/signout</url-pattern>
    </servlet-mapping>

</web-app>