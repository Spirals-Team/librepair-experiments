<?xml version="1.0" encoding="UTF-8"?>
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:hsqldb:mem:carsale;sql.enforce_size=false</property>
        <property name="connection.driver_class">org.hsqldb.jdbcDriver</property>
        <property name="connection.username">sa</property>
        <property name="connection.password"></property>
        <property name="dialect">org.hibernate.dialect.HSQLDialect</property>
        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">create</property>

        <mapping resource="ru/job4j/models/User.hbm.xml"/>
        <mapping resource="ru/job4j/models/Brand.hbm.xml"/>
        <mapping resource="ru/job4j/models/Model.hbm.xml"/>
        <mapping resource="ru/job4j/models/Advert.hbm.xml"/>
    </session-factory>
</hibernate-configuration>