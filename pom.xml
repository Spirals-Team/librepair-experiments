	<!-- Artifact identification and properties -->

	<groupId>ISPP</groupId>
	<artifactId>Shipmee</artifactId>
	<packaging>war</packaging>

	<properties>
		<project.build.sourceEncoding>ISO-8859-1</project.build.sourceEncoding>
        <sonar.organization>shipmee</sonar.organization>
        <sonar.language>java</sonar.language>
        <sonar.exclusions> **src/main/java/security/**, **src/main/java/utilities/**, **src/main/java/repositories/**, **src/main/java/services/form/**</sonar.exclusions>
        <sonar.cpd.exclusions> **src/main/java/converters/**, **src/main/java/domain/**, **src/main/java/repositories/**</sonar.cpd.exclusions>
        <sonar.coverage.exclusions> **src/main/java/controllers/**, **src/main/java/converters/**, **src/main/java/domain/form/**, **src/main/java/domain/DomainEntity.*, **src/main/java/domain/CreditCard.*, **src/main/java/domain/FundTransferPreference.*, **src/main/java/domain/PayPalObject.*, **src/main/java/security/**, **src/main/java/repositories/**, **src/main/java/utilities/**, **src/main/java/services/form/**, **src/main/java/services/ActorService.*, **src/main/java/services/AdministratorService.*, **src/main/java/services/PayPalService.*, **src/main/java/services/SizePriceService.*</sonar.coverage.exclusions>
	</properties>

	<!-- Indexing information -->

	<name>Shipmee</name>
	<version>0.3</version>
	<url>https://shipmee.es</url>
	<scm><url>https://github.com/Shipmee/Shipmee</url></scm>
	<ciManagement><url>https://travis-ci.org/Shipmee/Shipmee</url></ciManagement>
	<issueManagement><url>http://red.mlr.duckdns.org/projects/c</url></issueManagement>


	<!-- Build commands -->

	<build>
		<plugins>

			<!-- Java compiler -->

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.0</version>
				<configuration>
					<source>1.7</source>
					<target>1.7</target>
					<showWarnings>true</showWarnings>
					<compilerArguments>
						<Xlint />
					</compilerArguments>
				</configuration>
			</plugin>

			<!-- Population -->

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<version>1.1</version>
				<executions>
					<execution>
						<phase>install</phase>
						<goals>
							<goal>java</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<mainClass>utilities.PopulateDatabase</mainClass>
				</configuration>
			</plugin>

			<!-- Tomcat 7 -->

			<plugin>
				<groupId>org.apache.tomcat.maven</groupId>
				<artifactId>tomcat7-maven-plugin</artifactId>
				<version>2.1</version>
				<configuration>
					<server>tomcat-development-server</server>
					<port>8080</port>
					<path>/${project.artifactId}</path>
				</configuration>
			</plugin>

			<!-- Coverall -->

			<plugin>
				<groupId>org.eluder.coveralls</groupId>
				<artifactId>coveralls-maven-plugin</artifactId>
				<version>4.3.0</version>
				<configuration>
					<!-- <repoToken>yourcoverallsprojectrepositorytoken</repoToken> -->
					<format>xml</format>
					<maxmem>256m</maxmem>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>cobertura-maven-plugin</artifactId>
				<version>2.7</version>
				<configuration>
					<format>xml</format>
<!-- 					<format>html</format> -->
					<maxmem>256m</maxmem>
					<instrumentation>
						<excludes>
							<exclude>controllers/**</exclude>
							<exclude>converters/**</exclude>
							<exclude>domain/form/**</exclude>
							<exclude>domain/DomainEntity.*</exclude>
							<exclude>domain/CreditCard.*</exclude>
							<exclude>domain/FundTransferPreference.*</exclude>
							<exclude>domain/PayPalObject.*</exclude>
							<exclude>security/**</exclude>
							<exclude>repositories/**</exclude>
							<exclude>utilities/**</exclude>
							<exclude>services/form/**</exclude>
							<exclude>services/ActorService.*</exclude>
							<exclude>services/AdministratorService.*</exclude>
							<exclude>services/PayPalService.*</exclude>
							<exclude>services/SizePriceService.*</exclude>
						</excludes>
					</instrumentation>
				</configuration>
			</plugin>

			<!-- Heroku Deployment -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.3</version>
				<executions>
					<execution>
						<phase>package</phase>
						<goals><goal>copy</goal></goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>com.github.jsimone</groupId>
									<artifactId>webapp-runner</artifactId>
									<version>7.0.57.2</version>
									<destFileName>webapp-runner.jar</destFileName>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
        	</plugin>
		</plugins>
	</build>

