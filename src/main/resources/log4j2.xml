<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <RollingFile name="RollingFile">
            <FileName>./application.log</FileName>
            <FilePattern>./application_%d{yyyy-MM-dd}.log</FilePattern>
            <PatternLayout>
                <Pattern>%-5p %d{yyyy-MM-dd HH:mm:ss} [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Logger name="com.rgross" level="info" additivity="false">
            <AppenderRef ref="RollingFile"/>
        </Logger>
    </Loggers>
</Configuration>