<?xml version="1.0"?>
<web-app
        xmlns="http://xmlns.jcp.org/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
        version="3.1">
    <display-name>Calories Management</display-name>

    <welcome-file-list>
        <welcome-file>/root.jsp</welcome-file>
    </welcome-file-list>

    <session-config>
        <session-timeout>3</session-timeout>
    </session-config>

    <jsp-config>
        <jsp-property-group>
            <url-pattern>*.jsp</url-pattern>
            <page-encoding>UTF-8</page-encoding>
        </jsp-property-group>
    </jsp-config>

    <servlet>
        <servlet-name>login-servlet</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.user.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login-servlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>meal-list</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.meal.ListMealServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>meal-list</servlet-name>
        <url-pattern>/meal</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>meal-save</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.meal.SaveMealServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>meal-save</servlet-name>
        <url-pattern>/meal/save</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>meal-delete</servlet-name>
        <servlet-class>ru.javawebinar.topjava.web.meal.DeleteMealServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>meal-delete</servlet-name>
        <url-pattern>/meal/delete</url-pattern>
    </servlet-mapping>
</web-app>
