<?xml version="1.0"?>
<configuration>
    <!-- https://logback.qos.ch/manual/configuration.html#LevelChangePropagator -->
    <contextListener class="ch.qos.logback.classic.jul.LevelChangePropagator">
        <resetJUL>true</resetJUL>
    </contextListener>

    <!--
     - https://logback.qos.ch/manual/layouts.html#Evaluators
     - https://logback.qos.ch/manual/filters.html#JaninoEventEvaluator
     -->
    <evaluator name="ERROR">
        <expression>level == ERROR</expression>
    </evaluator>
    <evaluator name="NON_ERROR">
        <expression>level != ERROR</expression>
    </evaluator>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d{HHmmss.SSS} %.-1level %thread/%logger{0} - %msg%n%ex{0, ERROR}%ex{full, NON_ERROR}</pattern>
        </encoder>
    </appender>


    <logger name="org.postgresql" level="DEBUG"/>
    <logger name="org.hibernate.engine.transaction.internal.TransactionImpl" level="OFF"/>
    <logger name="org.hibernate.internal.util.EntityPrinter" level="OFF"/>
    <logger name="org.hibernate.type.descriptor.converter.AttributeConverterSqlTypeDescriptorAdapter" level="OFF"/>
    <logger name="org.springframework.jdbc" level="OFF"/>
    <logger name="org.springframework.orm.jpa.JpaTransactionManager" level="OFF"/>
    <logger name="org.springframework.test.context.transaction.TransactionContext" level="OFF"/>
    <logger name="ru.javawebinar.topjava" level="DEBUG"/>
    <logger name="ru.javawebinar.topjava.service.TestClassStopwatch" level="DEBUG"/>
    <logger name="ru.javawebinar.topjava.service.TestMethodStopwatch" level="DEBUG"/>

    <!-- the level of the root logger is set to DEBUG by default -->
    <root level="WARN">
        <appender-ref ref="console"/>
    </root>
</configuration>
