{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",

    "strict": true,
    "strictPropertyInitialization": false,

    // This mainly to detect unused imports
    // (tslint has terrible support for this)
    "noUnusedLocals": true,

    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
