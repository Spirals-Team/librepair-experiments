{
  "compilerOptions": {
    "target": "es5",
    "module":"es2015",
    "moduleResolution": "node",
    "lib": ["es2015", "es2016", "es2017", "dom"],

    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    //"strict": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    // "strictFunctionTypes": true, // TS2.6+

    // This mainly to detect unused imports
    // (tslint has terrible support for this)
    "noUnusedLocals": false,

    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ]
}
