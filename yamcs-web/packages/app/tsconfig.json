{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": [
      "es2017",
      "dom"
    ],
    "target": "es5",

    "outDir": "./dist/out-tsc",
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",

    // Needed by angular
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    //"strict": true,
    "alwaysStrict": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    // "strictFunctionTypes": true,

    // This mainly to detect unused imports
    // (tslint has terrible support for this)
    "noUnusedLocals": true,

    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
     // Used by ng-packagr only
    "**/lib.ts",
    "**/lib/dist"
  ]
}
