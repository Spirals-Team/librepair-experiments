<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <description>Receiver Configuration</description>

    <bean id="messageDecoder" class="org.darkphoenixs.rocketmq.codec.RocketmqMessageDecoderDemo"/>

    <bean id="messageConsumer" class="org.darkphoenixs.rocketmq.consumer.MessageConsumer"/>

    <bean id="messageListener" class="org.darkphoenixs.rocketmq.listener.RocketmqMessageConsumerListener">
        <property name="consumer" ref="messageConsumer"/>
        <property name="messageDecoder" ref="messageDecoder"/>
    </bean>

    <bean id="rocketmqConsumer" class="org.apache.rocketmq.client.consumer.DefaultMQPushConsumer" init-method="start"
          destroy-method="shutdown">
        <property name="consumerGroup" value="conspringtest"/>
        <property name="namesrvAddr" value="localhost:9876"/>
        <property name="messageListener">
            <bean factory-bean="messageListener" factory-method="getMessageListener"/>
        </property>
        <property name="subscription">
            <map>
                <entry key="QUEUE_TEST">
                    <value>*</value>
                </entry>
            </map>
        </property>
    </bean>

</beans>